@model PayuTest.Models.PaymentDetails

@{
    ViewBag.Title = "Pay";
}

<h2>Pay</h2>


<form method="post" action="/payment/pay1">
   
    @Html.EditorFor(model => model.key, new { htmlAttributes = new { @class = "form-control" } })
    @Html.EditorFor(model => model.TxId, new { htmlAttributes = new { @class = "form-control" } })
    @Html.EditorFor(model => model.Hash, new { htmlAttributes = new { @class = "form-control" } })
